<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenglei.humanrelationbooking">


    <!-- bmob-->
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:name=".BooksApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/BASE">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.chenglei.humanrelationbooking.home.HomeActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".books.create.RecordCreateActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".debug.FlowDebugActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".debug.PagingDebugActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".debug.DevelopActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".base.ComposeActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".h5.WebViewActivity"
            android:theme="@style/Theme.Humanrelationbooking.NoActionBar"
            android:screenOrientation="portrait"/>

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="${applicationId}.BmobContentProvider">
        </provider>
    </application>

</manifest>